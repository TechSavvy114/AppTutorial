<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Javaoperators">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="match_parent">


        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="#FFEB3B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operators and Assignments"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1.Increment and Decrements operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="2.Arithmetic operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="3.Relational operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="4.Equality operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="5.Bitwise operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="6.Type cast operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="7.Assignment operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="8.Conditional operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="#050505"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="9.[ ] operators"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</RelativeLayout>